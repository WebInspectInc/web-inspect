<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<link rel="stylesheet" href="{{ '/css/main.css' | url }}">
		<!-- <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}"> -->
		<link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
	</head>
	<body>
		<header class="site-header">
			<h1 class="home">
				<a class="site-title" href="{{ '/' | url }}">
					<svg class="logomark" width="58px" height="63px" viewBox="0 0 58 63" version="1.1">
					    <title>Logo mark</title>
					    <g id="logo" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
					        <g transform="translate(-21.000000, -25.000000)">
					            <path class="bubble" d="M45.384872,68.5720639 C33.2270466,66.8593138 24,58.5003485 24,48.4466019 C24,37.1542555 35.6405965,28 50,28 C64.3594035,28 76,37.1542555 76,48.4466019 C76,58.5003485 66.7729534,66.8593138 54.615128,68.5720639 L50,80 L45.384872,68.5720639 Z" stroke-width="6"></path>
					        </g>
					    </g>
					</svg>
					{{ metadata.title }}
				</a>
			</h1>
			<nav class="site-nav">
				<ul class="site-nav__ul">
					{%- for nav in collections.nav | reverse -%}
					<li class="site-nav__li{% if nav.url == page.url %} nav-item-active{% endif %}"><a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a></li>
					{%- endfor -%}
				</ul>
			</nav>
		</header>

		<main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
			{{ layoutContent | safe }}
		</main>

		<footer class="site-footer">
			<div class="inner">
				Â© Web Inspect Inc, 2018
			</div>
		</footer>

		<!-- Current page: {{ page.url | url }} -->
	</body>
</html>
